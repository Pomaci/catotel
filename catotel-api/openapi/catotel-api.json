  "info": {
    "title": "Catotel API",
    "description": "Auth-first API for the Catotel platform. Includes device sessions, token rotation, and health checks.",
    "version": "1.0.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "securitySchemes": {
      "access-token": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http",
        "description": "Provide the short-lived access token returned by /auth/login"
      }
    },
    "schemas": {
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "User email used as the login identifier",
            "example": "catlover@example.com"
          },
          "password": {
            "type": "string",
            "description": "Plaintext password (min 8 characters)",
            "example": "S3cureP@ssw0rd",
            "minLength": 8
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "AuthUserDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "example": "catlover@example.com"
          },
          "name": {
            "type": "object",
            "example": "Mila the Cat",
            "nullable": true
          },
          "role": {
            "type": "string",
            "enum": [
              "ADMIN",
              "MANAGER",
              "STAFF",
              "CUSTOMER"
            ],
            "example": "CUSTOMER"
          }
        },
        "required": [
          "id",
          "email",
          "role"
        ]
      },
      "AuthResponseDto": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "description": "Short-lived access token (JWT)",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "refresh_token": {
            "type": "string",
            "description": "Refresh token that rotates on each refresh call",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "user": {
            "$ref": "#/components/schemas/AuthUserDto"
          }
        },
        "required": [
          "access_token",
          "refresh_token",
          "user"
        ]
      },
      "RefreshTokenDto": {
        "type": "object",
        "properties": {
          "refresh_token": {
            "type": "string",
            "description": "Long-lived refresh token issued during login",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        },
        "required": [
          "refresh_token"
        ]
      },
      "AuthTokensDto": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "description": "Short-lived access token (JWT)",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "refresh_token": {
            "type": "string",
            "description": "Refresh token that rotates on each refresh call",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        },
        "required": [
          "access_token",
          "refresh_token"
        ]
      },
      "SessionResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userAgent": {
            "type": "string",
            "description": "Browser or device user agent",
            "example": "Mozilla/5.0"
          },
          "ip": {
            "type": "string",
            "description": "Reported IP address",
            "example": "127.0.0.1"
          },
          "isRevoked": {
            "type": "boolean",
            "default": false
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "lastUsedAt": {
            "type": "string",
            "format": "date-time"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "userAgent",
          "ip",
          "isRevoked",
          "createdAt",
          "updatedAt",
          "lastUsedAt",
          "expiresAt"
        ]
      },
      "RegisterUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "newcat@catotel.com"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "example": "Purrfect123"
          },
          "name": {
            "type": "string",
            "example": "Luna",
            "nullable": true,
            "description": "Optional display name to show in dashboards"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "CustomerSummaryDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "phone": {
            "type": "object"
          },
          "address": {
            "type": "object"
          }
        },
        "required": [
          "id"
        ]
      },
      "StaffSummaryDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "position": {
            "type": "object"
          },
          "phone": {
            "type": "object"
          }
        },
        "required": [
          "id"
        ]
      },
      "UserProfileDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "example": "newcat@catotel.com"
          },
          "name": {
            "type": "object",
            "example": "Luna",
            "nullable": true
          },
          "role": {
            "type": "string",
            "enum": [
              "ADMIN",
              "MANAGER",
              "STAFF",
              "CUSTOMER"
            ],
            "example": "CUSTOMER"
          },
          "customer": {
            "$ref": "#/components/schemas/CustomerSummaryDto"
          },
          "staff": {
            "$ref": "#/components/schemas/StaffSummaryDto"
          }
        },
        "required": [
          "id",
          "email",
          "role"
        ]
      },
      "UpdateCustomerDto": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "string"
          },
          "preferredVet": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "emergencyContactName": {
            "type": "string"
          },
          "emergencyContactPhone": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "CreateCatDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Mila"
          },
          "breed": {
            "type": "string"
          },
          "gender": {
            "type": "string",
            "enum": [
              "FEMALE",
              "MALE",
              "UNKNOWN"
            ]
          },
          "birthDate": {
            "type": "string"
          },
          "weightKg": {
            "type": "number",
            "description": "Weight in kg"
          },
          "dietaryNotes": {
            "type": "string"
          },
          "medicalNotes": {
            "type": "string"
          },
          "photoUrl": {
            "type": "string"
          }
        },
        "required": [
