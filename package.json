{
  "name": "catotel-workspace",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "catotel-api",
    "catotel-dashboard",
    "catotel-mobile",
    "catotel-clients/api-client",
    "catotel-clients/i18n"
  ],
  "scripts": {
    "dev": "concurrently -n api,dashboard,mobile -c green,cyan,magenta \"pnpm --filter catotel-api run dev\" \"pnpm --filter catotel-dashboard run dev\" \"pnpm --filter catotel-mobile run dev\"",
    "dev:api": "pnpm --filter catotel-api run dev",
    "dev:dashboard": "pnpm --filter catotel-dashboard run dev",
    "dev:mobile": "pnpm --filter catotel-mobile run dev",
    "lint": "pnpm -r --if-present run lint",
    "test": "pnpm -r --if-present run test",
    "build": "pnpm -r --if-present run build",
    "changeset": "changeset",
    "changeset:status": "changeset status --since=origin/main",
    "check:openapi-breaking": "node ./tooling/scripts/check-openapi-breaking-change.mjs"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/cli": "^2.29.8",
    "concurrently": "^9.1.2",
    "openapi-diff": "^0.24.1"
  }
}
